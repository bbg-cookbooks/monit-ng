# <%= @name %> check generated by Chef
check <%= @check_type %> <%= @name %> 
<% if @id_type %>
  with <%= @id_type %> <%= @check_id %>
<% end %>
<% if @every %>
  every <%= @every %>
<% end %>
<% if @group %>
  group <%= @group %>
<% end %>
<% if @start %>
  start "<%= @start %>"
  <% if @start_as %>
    as uid <%= @start_as %> and gid <%= @start_as_group %>
  <% end %>
<% end %>
<% if @stop %>
  stop "<%= @stop %>"
  <% if @stop_as %>
    as uid <%= @stop_as %> and gid <%= @stop_as_group %>
  <% end %>
<% end %>
<% @tests.each do |test| %>
  if <%= test['condition'] %>
    then <%= test['action'] %>
<% end %>
